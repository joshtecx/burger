<h1>Gucci's Burger World!</h1>
<div class="eatenBurgers">
    <h2>Burger Casualties</h2>

    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<div class="remainingBurgers">
    <h2>STRONG BURGERS REMAIN</h2>

    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="addBurger">
    <h2>Add a Burger</h2>

    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name: </label>
            <input type="text"  id="burgerText" name="name">
        </div>


        <button type="submit" id="add-burger">Add Burger</button>
    </form>
</div>